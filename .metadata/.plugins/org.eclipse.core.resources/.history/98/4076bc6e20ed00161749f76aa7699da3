#include <Arduino.h>
#define PIN_LED_RED 6
#define PIN_LED_YELLOW 7
#define PIN_POTENTIALMETER_INPUT 0
#define PIN_TOUCH_SENSOR_INPUT 1

int remapPotentialMeter (int);
int remapTouchSensor(int);
void potential_red();
void touch_sensor_yellow();


void setup() {
	pinMode(PIN_LED_RED, OUTPUT);
	pinMode(PIN_LED_YELLOW, OUTPUT);
	pinMode(PIN_POTENTIALMETER_INPUT, INPUT);
	pinMode(PIN_TOUCH_SENSOR_INPUT, INPUT);
}

void loop() {
	potential_red();
	touch_sensor_yellow();
}

void potential_red(){
	int val;
	val = analogRead(PIN_POTENTIALMETER_INPUT);
	analogWrite(PIN_LED_RED, remapPotentialMeter(val));
}

void touch_sensor_yellow(){
	int val;
	val = analogRead(PIN_TOUCH_SENSOR_INPUT);
	analogWrite(PIN_LED_YELLOW, remapTouchSensor(val));
}

int remapPotentialMeter(int val){
	int revised_val;
	revised_val = val/4;
	return revised_val;
}

void remapTouchSensor(){
	int val2;

}




